 <h1>Sign Up Confirmation</h1>
 <h2>Are you sure these values are correct?</h1>
 <h4>Email : <%=params[:user][:email]%></h4>
 <h4>Name : <%=params[:user][:name]%></h4>
 <div>
   <div style="float:left;margin:5px">
     <%= button_to "Yes", {controller: "users", action: "create", params: params[:user]}, class: 'btn btn-success' %>
   </div>
   <div style="float:left;margin:5px">
    <%= link_to "No", new_user_path, class: 'btn btn-danger' %>
   </div>
   <div style="clear:both;">
   </div>
 </div> 
 
 